<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="650" MinWidth="570" MinHeight="380" MaxWidth="820" MaxHeight="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="296*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="84*"/>
            <ColumnDefinition Width="105*"/>
            <ColumnDefinition Width="105*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="351*"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <Button Grid.Column="5" Grid.Row="3" MaxWidth="100" MinWidth="50" Height="25" VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="15 0 1 0" Content="Load"/>
        <Button Grid.Column="4" Grid.Row="3" MaxWidth="100" MinWidth="50" Height="25" VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="15 0 1 0" Content="Save"/>
        <GroupBox Grid.Column="1" Grid.Row="1" Header="Edit Contact">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="89*"/>
                    <ColumnDefinition Width="10"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Grid.Column="1" Content="Name:" HorizontalAlignment="Left"/>
                <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Height="20" VerticalAlignment="Center"/>
                <Label Grid.Row="2" Grid.Column="1" Content="Phone Number:" HorizontalAlignment="Left"/>
                <TextBox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Height="20" VerticalAlignment="Center"/>
                <Label Grid.Row="4" Grid.Column="1" Content="Email:" HorizontalAlignment="Left"/>
                <TextBox Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" Height="20" VerticalAlignment="Center"/>
            </Grid>
        </GroupBox>
        <GroupBox Grid.ColumnSpan="3" Grid.Column="3" Grid.Row="1" Header="Read Contact">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="Name:" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="1" Grid.Column="1" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="2" Grid.Column="1" Text="Phone Number:" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="3" Grid.Column="1" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="4" Grid.Column="1" Text="Email:" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="5" Grid.Column="1" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
