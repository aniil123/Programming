<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        xmlns:vm="clr-namespace:View.ViewModel"
        xmlns:com="clr-namespace:View.ViewModel.Commands"
        xmlns:con="clr-namespace:View.ViewModel.Converters"
        mc:Ignorable="d"
        Title="Contacts" Height="450" Width="650" MinWidth="630" MinHeight="380" MaxWidth="820" MaxHeight="700" Icon="/contacts_96x96.ico">

    <Window.Resources>
        <con:ModeToCanExecuteConverter x:Key="ModeToCanExecuteConverter"/>
        <con:Mode_CurrentContactToCanExecuteMultiConverter x:Key="Mode_CurrentContactToCanExecuteMultiConverter"/>
        <vm:MainVM x:Key="MainVM"/>
        <vm:AddCommand x:Key="AddCommand" Enabled="{Binding Source={StaticResource MainVM}, Path=Mode, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource ModeToCanExecuteConverter}}"/>
        <com:EditCommand x:Key="EditCommand">
            <com:EditCommand.Enabled>
                <MultiBinding 
                    Mode="OneWay"
                    Converter="{StaticResource Mode_CurrentContactToCanExecuteMultiConverter}"
                    ConverterParameter="{StaticResource MainVM}">
                    <Binding Source="{StaticResource MainVM}" Path="Mode" UpdateSourceTrigger="PropertyChanged"/>
                    <Binding Source="{StaticResource MainVM}" Path="CurrentContactVM" UpdateSourceTrigger="PropertyChanged"/>
                </MultiBinding>
            </com:EditCommand.Enabled>
        </com:EditCommand>
        <com:RemoveCommand x:Key="RemoveCommand">
            <com:RemoveCommand.Enabled>
                <MultiBinding 
                    Mode="OneWay" 
                    Converter="{StaticResource Mode_CurrentContactToCanExecuteMultiConverter}"
                    ConverterParameter="{StaticResource MainVM}">
                    <Binding Source="{StaticResource MainVM}" Path="Mode"/>
                    <Binding Source="{StaticResource MainVM}" Path="CurrentContactVM"/>
                </MultiBinding>
            </com:RemoveCommand.Enabled>
        </com:RemoveCommand>
        <com:ApplyCommand x:Key="ApplyCommand"/>
        <con:ModeToReadOnlyConverter x:Key="ModeToReadOnlyConverter"/>
        <con:ModeToVisibilityConverter x:Key="ModeToVisibilityConverter"/>
        <con:CurrentContactToSelectedContactConverter x:Key="CurrentContactToSelectedContactConverter"/>
        <con:ListParametersConverter x:Key="ListParametersConverter"/>
    </Window.Resources>
    
    <Grid DataContext="{StaticResource MainVM}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3.5*" MinWidth="170" MaxWidth="350"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="6.5*"/>
        </Grid.ColumnDefinitions>
        <Border 
            Grid.Column="0"
            Grid.RowSpan="2"
            Background="#f8f8f8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="35"/>
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Column="0"
                        Text="Find:"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Margin="8 3 3 3"/>
                    <TextBox
                        Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Margin="3 3 8 3"/>
                </Grid>
                <ListBox
                     Grid.Column="0" 
                     Grid.Row="1" 
                     Margin="8 5 8 5"
                     ItemsSource="{Binding Path=Contacts}" 
                     SelectedItem="{Binding Path=CurrentContactVM, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource CurrentContactToSelectedContactConverter}, ConverterParameter={StaticResource MainVM}}"
                     DisplayMemberPath="Name"/>
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button
                        Content="Add"
                        Grid.Column="0"
                        Height="25"
                        Margin="8 0 3 3"
                        VerticalAlignment="Center"
                        Command="{StaticResource AddCommand}"
                        CommandParameter="{StaticResource MainVM}"/>
                    <Button
                        Content="Edit"
                        Grid.Column="1"
                        Height="25"
                        Margin="3 0 3 3"
                        VerticalAlignment="Center"
                        Command="{StaticResource EditCommand}"
                        CommandParameter="{StaticResource MainVM}"/>
                    <Button
                        Content="Remove"
                        Grid.Column="2"
                        Height="25"
                        Margin="3 0 8 3"
                        VerticalAlignment="Center"
                        Command="{StaticResource RemoveCommand}"
                        CommandParameter="{StaticResource MainVM}"
                        IsEnabled="{Binding Source={StaticResource RemoveCommand}, Path=Enabled}"/>
                </Grid>
            </Grid>
        </Border>
        <GridSplitter
            Grid.Column="1"
            Grid.RowSpan="2"
            Width="5"
            HorizontalAlignment="Center"
            Background="White"/>
        <Grid Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Image
                Grid.Column="0"
                Width="100"
                Height="100"
                Margin="8 35 8 8"
                VerticalAlignment="Top"
                Source="/Resources/Person.png"/>
            <StackPanel Grid.Column="1">
                <TextBlock
                    Text="Name:"
                    Margin="8 8 0 3"/>
                <TextBox
                    x:Name="NameTextBox"
                    Margin="8"
                    IsReadOnly="{Binding Path=Mode, Mode=OneWay, Converter={StaticResource ModeToReadOnlyConverter}}"
                    Text="{Binding Path=Name, Mode=OneWay}"/>
                <TextBlock Text="PhoneNumber:" Margin="8 8 0 3"/>
                <TextBox
                    x:Name="PhoneNumberTextBox"
                    Margin="8"
                    IsReadOnly="{Binding Path=Mode, Mode=OneWay, Converter={StaticResource ModeToReadOnlyConverter}}"
                    Text="{Binding Path=PhoneNumber, Mode=OneWay}"/>
                <TextBlock
                    Text="Email:"
                    Margin="8 8 0 3"/>
                <TextBox
                    x:Name="EmailTextBox"
                    Margin="8"
                    IsReadOnly="{Binding Path=Mode, Mode=OneWay, Converter={StaticResource ModeToReadOnlyConverter}}"
                    Text="{Binding Path=Email, Mode=OneWay}"/>
                <Button
                    Content="Aplly"
                    Width="75"
                    Height="25"
                    Margin="8 50 0 0"
                    HorizontalAlignment="Left"
                    Visibility="{Binding Path=Mode, Converter={StaticResource ModeToVisibilityConverter}}"
                    Command="{StaticResource ApplyCommand}">
                    <Button.CommandParameter>
                        <MultiBinding Converter="{StaticResource ListParametersConverter}">
                            <Binding Source="{StaticResource MainVM}"/>
                            <Binding ElementName="NameTextBox" Path="Text"/>
                            <Binding ElementName="PhoneNumberTextBox" Path="Text"/>
                            <Binding ElementName="EmailTextBox" Path="Text"/>
                        </MultiBinding>
                    </Button.CommandParameter>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>